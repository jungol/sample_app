<% unless current_user?(@user) %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
  </div>
<% end %>

<script>
  $('#follow_form').click(function() {
    $action = $('#follow_form').children().children('input').val()
    mixpanel.track("(Un)Follow", {
    	"action":$action
    });
  })
</script>